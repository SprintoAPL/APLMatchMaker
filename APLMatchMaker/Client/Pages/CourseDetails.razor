@page "/coursedetails/{Id:int}"
@using APLMatchMaker.Client.Components
@using APLMatchMaker.Shared.DTOs.CoursesDTOs


<h3>Information om kursen</h3>

@if (courseDetails == null && ErrorMessage == null)
{
    <p>Hämtar....</p>
}
else if(ErrorMessage !=null)
{
    <p class="alert alert-danger">Fel vid datahämtning: @ErrorMessage</p>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col">
                <p><strong>Namn: </strong>@courseDetails!.Name</p>
                <p><strong>Beskrivning: </strong>@courseDetails.Description</p>
            </div>
            <div class="col">
                <p><strong>Startdatum: </strong>@courseDetails.StartDate.ToString("yyyy-MM-dd")</p>
                <p><strong>Slutdatum: </strong>@courseDetails.EndDate.ToString("yyyy-MM-dd")</p>
            </div>
        </div>
        <div>
            @if (courseDetails.students != null && courseDetails.students.Count > 0)
            {
                <StudentList Students="courseDetails.students"></StudentList>
            }
      
            @* <a href="@($"/ListOfCourses")" class="btn btn-danger m-1">Tillbaka till kurslistan</a> *@
        </div>
    <div class="btn-group" style="margin: 1rem 20rem">
            <a href="@($"/EditCourse/{Id}")" class="btn btn-primary"><i class="bi bi-pencil bi-2x"></i> Redigera</a>
            <a href="@($"/DeleteCourse/{Id}")" class="btn btn-danger"><i class="bi bi-trash bi-2x"></i> Radera</a>
            <a href="@($"/ListOfCourses")" class="btn btn-secondary"><i class="bi bi-caret-left bi-2x"></i> Tillbaka</a>
    </div>
    </div>
}







