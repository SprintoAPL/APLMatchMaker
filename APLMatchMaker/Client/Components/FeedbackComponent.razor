

@if (IsVisible)
{
    <div class="alert @(IsSuccess ? "alert-success" : "alert-danger")">
        @Message
    </div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public bool IsSuccess { get; set; }

    [Parameter]
    public string? Message { get; set; }
}
