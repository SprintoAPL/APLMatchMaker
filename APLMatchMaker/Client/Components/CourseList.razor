<table class="table table-striped table-bordered">

    <thead>

        <tr>
            <th scope="col">Kursnamn</th>
            <th scope="col">Startdatum</th>
            <th scope="col">Slutdatum</th>
            <th scope="col"></th> @* Space for the "delete" button. *@
        </tr>

    </thead>

    <tbody>

        @foreach (var course in CompListOfCourses)
        {
            <tr>
                <td scope="row"><a href="@($"coursedetails")">@course.Name</a></td>
                <td scope="row">@course.StartDate.ToString("yyyy-MM-dd")</td>
                <td scope="row">@course.EndDate.ToString("yyyy-MM-dd")</td>
                <td scope="row">
                    <a href="@($"deletecourse/{course.Id}")" class="btn btn-danger m-1">Radera kurs</a>
                </td>
            </tr>
        }
    </tbody>
</table>
