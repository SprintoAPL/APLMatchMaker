@using APLMatchMaker.Shared.DTOs.CoursesDTOs

@if (CompListOfCourses == null || !CompListOfCourses.Any())
{
    <p>Ingen kurs hittad.</p>
}
else
{
    <table class="table">

        <thead>

            <tr>
                <th scope="col">Kursnamn</th>
                <th scope="col">Startdatum</th>
                <th scope="col">Slutdatum</th>
                <th scope="col">Redigera</th>
                <th scope="col"></th> @* Space for the "delete" button. *@
            </tr>

        </thead>

        <tbody>

            @foreach (var course in CompListOfCourses)
            {
                <tr>
                    <td scope="row"><a href="@($"coursedetails/{course.Id}")">@course.Name</a></td>
                    <td scope="row">@course.StartDate.ToString("yyyy-MM-dd")</td>
                    <td scope="row">@course.EndDate.ToString("yyyy-MM-dd")</td>
                    <td scope="row">
                        <a href="@($"editcourse/{course.Id}")" class="btn btn-info m-1"> <span class="bi bi-pencil bi-2x"></span></a>
                    </td>
                    <td scope="row">
                        <a href="@($"deletecourse/{course.Id}")" class="btn btn-danger m-1"> <span class="bi bi-trash bi-2x"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@($"addcourse")" class="btn btn-primary m-1">Lägg till en ny kurs</a>
    
    
}
