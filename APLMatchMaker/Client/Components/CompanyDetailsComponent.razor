@using APLMatchMaker.Shared.DTOs.CompanyDTOs;
<div class="container">
    <div class="label">
        <h4>
            @Company.CompanyName
        </h4>
    </div>
    <div class="avatarLogo"></div>
    <div class="details">
        <h2>Kontakt</h2>
        <p>
        <b>Företag:</b> @Company!.CompanyName<br />
        <b>Hemsida:</b> @Company.Website<br />
        <b>E-post:</b> @Company.CompanyEmail<br />
        <b>Postadress:</b> @Company.PostalAdress<br />
        <b>Postnummer:</b> @Company.PostalNumber<br />
        <b>Postort:</b> @Company.City<br />
        <b>Org.Nr:</b> @Company.OrganizationNumber<br />
        <b>Övrigt:</b> @Company.Notes<br />
        </p>


    </div>

    <div class="details">
        <h2>Praktikanter</h2>
        <p>
        <b>Namn:</b> @Company!.CompanyName<br />
        <b>Kurs:</b> @Company!.CompanyName<br />
        <b>Period:</b> @Company.Website<br />
        <b>Mail:</b> @Company.CompanyEmail<br />
        <b>Postort:</b> @Company.City<br />
        <b>Övrigt:</b> @Company.Notes<br />
        </p>


    </div>

    <div class="details">
        <h2>Tidigare Praktikanter</h2>
        <p>
        <b>Namn:</b> @Company!.CompanyName<br />
        <b>Kurs:</b> @Company!.CompanyName<br />
        <b>Period:</b> @Company.Website<br />
        <b>Mail:</b> @Company.CompanyEmail<br />
        <b>Postort:</b> @Company.City<br />
        <b>Övrigt:</b> @Company.Notes<br />
        </p>


    </div>
</div>


